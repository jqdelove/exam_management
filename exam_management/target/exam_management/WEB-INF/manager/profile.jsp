                                                <input type="password" class="form-control" id="managerPwd" placeholder="新密码" name="managerPwd">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="managerRePwd" class="col-sm-2 control-label">确认密码</label>

